# Productboard MCP Server Configuration

# Server Configuration
MCP_SERVER_PORT=3000
MCP_SERVER_HOST=localhost
MCP_SERVER_TIMEOUT=30000

# Authentication Configuration
# Options: bearer, oauth2
PRODUCTBOARD_AUTH_TYPE=bearer

# Bearer Token Authentication
# Get your API token from: https://your-subdomain.productboard.com/settings/api-keys
PRODUCTBOARD_API_TOKEN=your_api_token_here

# OAuth2 Authentication (if using OAuth2)
PRODUCTBOARD_OAUTH_CLIENT_ID=your_client_id
PRODUCTBOARD_OAUTH_CLIENT_SECRET=your_client_secret
PRODUCTBOARD_OAUTH_REDIRECT_URI=http://localhost:3000/callback

# API Configuration
PRODUCTBOARD_API_BASE_URL=https://api.productboard.com/v1
PRODUCTBOARD_API_TIMEOUT=10000

# Rate Limiting
RATE_LIMIT_GLOBAL=100
RATE_LIMIT_WINDOW_MS=60000

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=300
CACHE_MAX_SIZE=100

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Development
NODE_ENV=development